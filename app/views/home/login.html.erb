<html>
<head>
	<title>登录</title>
	<meta charset = 'utf8'>
</head>
<body>
	<%= form_for(:user,:url=>"/home/checkLogin") do |f| %>
		<div class="field">
    		<%= f.label :account %><br>
    		<%= f.text_field :account %>
  		</div>
  		<div class="field">
    		<%= f.label :password %><br>
    		<%= f.text_field :password %>
  		</div>
  		<div class="actions">
    		<%= f.submit '登录'%>
  		</div>
	<% end %>
  <%=link_to '返回',:action=>'index',:controller=>'home'%>
</body>
</html>